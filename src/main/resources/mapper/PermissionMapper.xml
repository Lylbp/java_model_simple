<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lylbp.project.mapper.PermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lylbp.project.entity.Permission">
        <!-- 权限id -->
        <id column="permission_id" property="permissionId"/>
        <!-- 权限名称 -->
        <result column="permission_name" property="permissionName"/>
        <!-- 权限url -->
        <result column="permission_url" property="permissionUrl"/>
        <!-- 创建人 -->
        <result column="create_by" property="createBy"/>
        <!-- 创建时间 -->
        <result column="create_time" property="createTime"/>
        <!-- 更新人 -->
        <result column="update_by" property="updateBy"/>
        <!-- 更新时间 -->
        <result column="update_time" property="updateTime"/>
        <!-- 是否有效数据 -->
        <result column="is_valid" property="isValid"/>
    </resultMap>


    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
            t.permission_id,
            t.permission_name,
            t.permission_url,
            t.create_by,
            t.create_time,
            t.update_by,
            t.update_time,
            t.is_valid
        </sql>

    <!-- 通用查询语句(数据库comment中含有?则不显示字段注释)) -->
    <sql id="Base_Where_List">

        <!-- 权限id查询 -->
        <if test="params.containsKey('permissionId')">
            AND t.permission_id = #{params.permissionId}
        </if>


        <!-- 权限名称查询 -->
        <if test="params.permissionName != null and params.permissionName != ''">
            AND t.permission_name = #{params.permissionName}
        </if>

        <!-- 权限名称模糊查询 -->
        <if test="params.permissionNameLike != null and params.permissionNameLike != ''">
            AND t.permission_name LIKE CONCAT('%', #{params.permissionNameLike}, '%')
        </if>


        <!-- 权限url查询 -->
        <if test="params.permissionUrl != null and params.permissionUrl != ''">
            AND t.permission_url = #{params.permissionUrl}
        </if>

        <!-- 权限url模糊查询 -->
        <if test="params.permissionUrlLike != null and params.permissionUrlLike != ''">
            AND t.permission_url LIKE CONCAT('%', #{params.permissionUrlLike}, '%')
        </if>


        <!-- 创建人查询 -->
        <if test="params.createBy != null and params.createBy != ''">
            AND t.create_by = #{params.createBy}
        </if>

        <!-- 创建人模糊查询 -->
        <if test="params.createByLike != null and params.createByLike != ''">
            AND t.create_by LIKE CONCAT('%', #{params.createByLike}, '%')
        </if>


        <!-- 创建时间查询 -->
        <if test="params.createTime != null and params.createTime != ''">
            AND t.create_time = #{params.createTime}
        </if>


        <!-- 更新人查询 -->
        <if test="params.updateBy != null and params.updateBy != ''">
            AND t.update_by = #{params.updateBy}
        </if>

        <!-- 更新人模糊查询 -->
        <if test="params.updateByLike != null and params.updateByLike != ''">
            AND t.update_by LIKE CONCAT('%', #{params.updateByLike}, '%')
        </if>


        <!-- 更新时间查询 -->
        <if test="params.updateTime != null and params.updateTime != ''">
            AND t.update_time = #{params.updateTime}
        </if>
    </sql>

    <!-- PermissionVO查询语句 -->
    <select id="queryPermissionVOByParams" parameterType="java.util.Map" resultType="com.lylbp.project.vo.PermissionVO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_rbac_permission t
        <where>
            <!-- 删除状态查询 -->
            AND t.is_valid = 1
            <include refid="Base_Where_List"/>
        </where>
        ORDER BY t.permission_url
    </select>
</mapper>
